{% extends 'layouts/dashboard.html.twig' %}


{% block title %}| Unidade de Medida | Listagem{% endblock %}
{% block stylesheet %}
    <link href="/dist/js/jquery.bootgrid.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/dist/css/iziToast.min.css">
{% endblock %}

{% block breadcrumb %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
            </div>
        </div><!-- /.container-fluid -->
    </section>
{% endblock %}


{% block content %}
    <section class="content" id="listagem">
        <h3>Listagem de Unidades de Medida</h3>
        <div class="row">
            <div class="col-12">
                <a role="button" id="btn-listagem" href="/unidademedida/formCadastrar" class="btn btn-success"><span class="fas fa-user-plus"></span></a> 
                <table id="grid-data" class="table table-condensed table-bordered table-hover table-striped table-light">
                    <thead class="thead-light">
                    <tr>
                        <th data-column-id="id_unidademedida" >Código</th>
                        <th data-column-id="unidademedida" data-order="desc" data-sortable="true">Unidade de Medida</th>
                        <th data-column-id="commands" data-formatter="commands" data-sortable="false">Ações</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
        <!-- /.row -->
    </section>

{% endblock %}



{% block javascriptPlugins %}
    <script src="/dist/js/jquery.bootgrid.js"></script>
    <script src="/dist/js/jquery.bootgrid.fa.js"></script>
    <script src="/dist/js/iziToast.js"></script>
    <script src="/dist/js/iziToastExcluir.js"></script>
{% endblock %}

{% block jquery %}
    <script>
        var grid;
        $(document).ready(function(){
            grid = $("#grid-data").bootgrid({
                ajax: true,
                url: "/unidademedida/bootgrid",
                formatters: {
                    "commands": function(column, row)
                    {
                        return "<button type=\"button\" class=\"btn btn-danger command-delete\" data-row-id=\"" + row.id_unidademedida + "\"><span class=\"fa fa-trash\"></span></button>" +
                         "<button type=\"button\" class=\"btn btn-primary command-edit\" data-row-id=\"" + row.id_unidademedida   + "\"><span class=\"fas fa-edit\"></span></button> ";
                    }
                }
            }).on("loaded.rs.jquery.bootgrid", function()
            {
                grid.find(".command-edit").on("click", function(e)
                {
                    document.location = '/unidademedida/formeditar/' + $(this).data("row-id");
                }).end().find(".command-delete").on("click", function(e)
                {
                    iziToastExcluir($(this).data("row-id"));
                });
            });
        });


        function excluir(id_unidademedida){
            $.post(
                "/unidademedida/excluir",
                { id_unidademedida: id_unidademedida },
                function( data ) {
                    if (data.status==0){
                        iziToast.error({
                            message: data.mensagem
                        });
                    }else{
                        iziToast.success({
                            message: data.mensagem
                        });
                        grid.bootgrid("reload");
                    }
                },
                "json"
            );
        }
    </script>


{% endblock %}

{% block javascript %}
{% endblock %}
