{% block jquery %}
    <script>  
        var grid;
        $(document).ready(function(){
            $("#exame_guiaexame").on('change', function () {
                preco_guiaexame = $(this).find(':selected').data('preco-exame');
                $("#preco_guiaexame").val(preco_guiaexame);
        });
            $("#exame_guiaexame").on('change', function () {
                prazo_guiaexame = $(this).find(':selected').data('prazo-exame');
                $("#prazo_guiaexame").val(prazo_guiaexame);
        });

            grid = $("#grid-data").bootgrid({
                ajax: true,
                url: "/guia/bootgridcadastrarexame",
                formatters: {
                    "commands": function(column, row)
                    {
                        return "<button type=\"button\" class=\"btn btn-primary command-cadastro\" data-row-id=\"" + row.id_guiaexame + "\"><span class=\"fa fa-pen\"></span></button>";
                    }
                }
            }).on("loaded.rs.jquery.bootgrid", function()
            {
                grid.find(".command-cadastro").on("click", function(e)
                {
                    document.location = '/guia/formeditarExame/' + $(this).data("row-id");
                }).end().find(".command-delete").on("click", function(e)
                {
                    iziToastExcluir($(this).data("row-id"));
                });
            });
        
            $('.select2').select2({
                theme: 'bootstrap4'
            });
            $('.jsonForm').ajaxForm({
                dataType:  'json',

                success:   function(d){
                    if (d.status==0){
                        iziToast.error({
                            message: d.mensagem
                        });
                    }else{
                        iziToast.success({
                            message: d.mensagem
                        });
                    $('.jsonForm').trigger('reset');
                    grid.bootgrid("reload");
                    atualizaValorTotal();
                    }
                $("#adicionarguia").modal('hide');
                }
            });
        });

        function atualizaValorTotal() {
            $.getJSON(
                "guia/AtualizaValor",
                { id_guia :id_guia},
                function(data){
                    $("#precototal_guia").val(data.precototal_guia);
                },
            );
        }
        atualizaValorTotal();

        function excluir(id_guiaexame){
            $.post(
                "/guia/excluirExame",
                { id_guiaexame: id_guiaexame },
                function( data ) {
                    if (data.status==0){
                        iziToast.error({
                            message: data.mensagem
                        });
                    }else{
                        iziToast.success({
                            message: data.mensagem
                        });
                        grid.bootgrid("reload");
                        atualizaValorTotal();

                    }
                },
                "json"
            );
        }



    </script>
