{% extends 'layouts/dashboard.html.twig' %}


{% block title %}| Guia | Cadastrar{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/dist/css/iziToast.min.css">
    <link rel="stylesheet" href="/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">

{% endblock %}

{% block breadcrumb %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Guia
                        <small>Editar</small></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                        <li class="breadcrumb-item active">Guia</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

{% endblock %}


{% block content %}
    <section class="content">

        <div class="row">
            <div class="col-12">

                <div class="card card-primary">
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" action="/guia/salvareditar" method="post" class="jsonForm">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="id_guia">Código</label>
                                <input type="number" class="form-control" id="id_guia" name="id_guia" readonly value="{{ linha['id_guia'] }}">
                            </div>
                            <div class="form-group">
                                <label for="data_guia">Data da Guia</label>
                                <input type="datetime-local" class="form-control" id="data_guia" name="data_guia" placeholder="Data da guia" required value="{{ linha['data_guia'] }}">
                            </div>
                            <div class="form-group">
                                <label for="cliente_guia">Cliente</label>
                                <select id="cliente_guia" class="form-control select2" name="cliente_guia" required   >
                                    <option value="">- Selecione -</option>
                                    {% for clientes in clientes %}
                                        {% set selected = '' %}
                                        {% if clientes.id_cliente == linha['cliente_guia'] %}
                                            {% set selected = 'selected' %}
                                        {% endif %}
                                        <option value="{{ clientes.id_cliente }}" {{ selected }}>{{ clientes.nome_cliente }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="medico_guia">Médico</label>
                                <select id="medico_guia" class="form-control select2" name="medico_guia" required   >
                                    <option value="">- Selecione -</option>
                                    {% for medicos in medicos %}
                                        {% set selected = '' %}
                                        {% if medicos.id_medico == linha['medico_guia'] %}
                                            {% set selected = 'selected' %}
                                        {% endif %}
                                        <option value="{{ medicos.id_medico }}" {{ selected }}>{{ medicos.nome_medico }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="convenio_guia">Convênio</label>
                                <select id="convenio_guia" class="form-control select2" name="convenio_guia" required   >
                                    <option value="">- Selecione -</option>
                                    {% for convenios in convenios %}
                                        {% set selected = '' %}
                                        {% if convenios.id_convenio == linha['convenio_guia'] %}
                                            {% set selected = 'selected' %}
                                        {% endif %}
                                        <option value="{{ convenios.id_convenio }}" {{ selected }}>{{ convenios.nome_convenio }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="codigo_guia">Código</label>
                                <input type="text" class="form-control" id="codigo_guia" name="codigo_guia" placeholder="Nome da guia" required value="{{ linha['codigo_guia'] }}">
                            </div>
                            <div class="form-group">
                                <label for="senha_guia">Senha</label>
                                <input type="text" class="form-control" id="senha_guia" name="senha_guia" placeholder="Nome da guia" required value="{{ linha['senha_guia'] }}">
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
        <!-- /.row -->
    </section>

{% endblock %}



{% block javascriptPlugins %}
    <script src="/dist/js/jquery.form.js"></script>
    <script src="/dist/js/iziToast.min.js"></script>
    <script src="/plugins/select2/js/select2.full.min.js"></script>

{% endblock %}

{% block jquery %}
    <script>
        $(document).ready(function(){
            $('.select2').select2({
                theme: 'bootstrap4'
            });

            $('.jsonForm').ajaxForm({
                dataType:  'json',

                success:   function(d){
                    if (d.status==0){
                        iziToast.error({
                            message: d.mensagem
                        });
                    }else{
                        iziToast.success({
                            message: d.mensagem,
                            onClosed: function(){
                                document.location = "/guia";
                            }
                        });

                    }
                }

            });
        });
    </script>
{% endblock %}

{% block javascript %}
{% endblock %}